<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrokenScreenPrank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="cardBackgroundColor">@color/black</item>
        <item name="backgroundColor">@color/black</item>

        <item name="colorAccent">#2BCAD5</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/rating_normal</item>
        <item name="colorControlActivated">@color/rating_active</item>
    </style>
</resources>